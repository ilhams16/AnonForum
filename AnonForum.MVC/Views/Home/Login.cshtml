@{
	ViewBag.Title = "Login";
}
@model AnonForum.BLL.DTOs.User.UserLoginDTO

<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="card">
				<h5 class="card-header bg-primary text-white text-center mx-1">Login</h5>
				<div class="card-body">
					@if (ViewData["ErrorMessage"] is not null) {<p class="card p-2 text-start text-danger">@ViewData["ErrorMessage"]</p>}
					@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
					{
						@Html.AntiForgeryToken()

						<div class="form-group">
							@Html.LabelFor(model => model.UsernameOrEmail, new { @class = "control-label col-md-4 my-1" })
							<div class="col-md-8">
								@Html.TextBoxFor(model => model.UsernameOrEmail, new { @class = "form-control my-1", autofocus = "autofocus" })
								@Html.ValidationMessageFor(model => model.UsernameOrEmail, "", new { @class = "text-danger my-1" })
							</div>
						</div>

						<div class="form-group">
							@Html.LabelFor(model => model.Password, new { @class = "control-label col-md-4 my-1" })
							<div class="col-md-8">
								@Html.PasswordFor(model => model.Password, new { @class = "form-control my-1" })
								@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger my-1" })
							</div>
						</div>

						<div class="form-group">
							<div class="col-md-offset-4 col-md-8">
								<button type="submit" class="btn btn-primary my-1">Login</button>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>
