@model AnonForum.MVC.Models.EditPostModel
@* @model AnonForum.BLL.DTOs.Post.EditPostDTO *@

<!-- Modal -->
<div class="modal fade" id="editPostModal_@Model.EditPostDTO.PostID" tabindex="-1" aria-labelledby="editPostModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editPostModalLabel">Edit Post</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Form for editing post -->
				<form method="post" enctype="multipart/form-data"  asp-action="EditPost" asp-controller="Home" class="form-horizontal" role="form">
					<div class="modal-body">
						<!-- Form for adding new post -->
						@* @Html.AntiForgeryToken() *@
						@Html.HiddenFor(model => model.EditPostDTO.PostID)
						<div class="form-group">
							@Html.LabelFor(model => model.EditPostDTO.Title)
							@Html.TextBoxFor(model => model.EditPostDTO.Title, new { @class = "form-control my-1", id = "title" })
						</div>
						<div class="form-group">
							@Html.LabelFor(model => model.EditPostDTO.PostText)
							@Html.TextAreaFor(model => model.EditPostDTO.PostText, new { @class = "form-control my-1", id = "postText", rows = "3" })
						</div>
						<div class="form-group d-flex justify-content-between">
							@Html.DropDownListFor(model => model.EditPostDTO.PostCategoryID, new SelectList(Model.Categories, "PostCategoryID", "Name"), "Select Category", new { @class = "form-control my-1" })
						</div>

					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
						<button type="submit" class="btn btn-primary">Submit</button>
					</div>
				</form>
            </div>
        </div>
    </div>
</div>
